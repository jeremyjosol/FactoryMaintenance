@{
  Layout = "_Layout";
}

<h2>All Engineers</h2>
<hr />

@using Factory.Models;

@if(@Model.Count == 0)
{
  <p>No Engineers available.</p>
  <p class="new"><a href='/engineers/create'>New <span class="material-symbols-outlined">Add_circle</span></a></p>
}
else 
{
  @foreach(Engineer added in Model)
  {
    <p>- @Html.ActionLink($"{added.Name}", "Details", new { id = added.EngineerId })</p>
  }
}