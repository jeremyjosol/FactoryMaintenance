@{
  Layout = "_Layout";
}

<h2>All Engineers</h2>
<hr />

@using Factory.Models;

@if(@Model.Count == 0)
{
  <p>No Engineers available.</p>
  <p>@Html.ActionLink("Add an Engineer", "Create")</p>
}
else 
{
  <ul>
    @foreach(Engineer added in Model)
    {
      <li>@Html.ActionLink($"{added.Name}", "Details", new { id = added.EngineerId })</li>
    }
  </ul>
}