@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;
@using Factory.Models;

<div class="container">
  <h2>Engineer Details</h2>
  <hr/>
  <p><strong>@Html.DisplayNameFor(selectedEngineer => selectedEngineer.Name)</strong>: @Html.DisplayFor(selectedEngineer => selectedEngineer.Name)</p>
</div>
<hr/>

<h2>Registered Machines</h2>
 @foreach (MachineEngineer registered in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{registered.Machine.Name}", "Details", "Machines", new { id = registered.MachineId})</li>
    }

<p>@Html.ActionLink("Register Engineer", "Register", new { id = @Model.EngineerId })</p>
<p>@Html.ActionLink("Back to Engineers", "Index")</p>

