@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>Machines</h2>
<hr />

@if(@Model.Count == 0)
{
  <p class="zero">* No Machines available.</p>
}
else 
{
  @foreach(Machine added in Model)
  {
    <h5>&rarr;	@Html.ActionLink($"{added.Name}", "Details", new { id = added.MachineId })</h5>
  }
}
<br />
<p class="new"><a href='/machines/create'>New <span class="material-symbols-outlined">Add_circle</span></a></p>

