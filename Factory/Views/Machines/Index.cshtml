@{
  Layout = "_Layout";
}

<h2>All Machines</h2>
<hr />

@using Factory.Models;

@if(@Model.Count == 0)
{
  <p>No Machines available.</p>
  <p>@Html.ActionLink("Add a Machine", "Create")</p>
}
else 
{
  <ul>
    @foreach(Machine added in Model)
    {
      <li>@Html.ActionLink($"{added.Name}", "Details", new { id = added.MachineId })</li>
    }
  </ul>
}
