@{
  Layout = "_Layout";
}

<h2>All Machines</h2>
<hr />

@using Factory.Models;

@if(@Model.Count == 0)
{
  <p>No Machines available.</p>
}
else 
{
    @foreach(Machine added in Model)
    {
      <p>- @Html.ActionLink($"{added.Name}", "Details", new { id = added.MachineId })</p>
    }
}

<p class="new"><a href='/machines/create'>New <span class="material-symbols-outlined">Add_circle</span></a></p>

