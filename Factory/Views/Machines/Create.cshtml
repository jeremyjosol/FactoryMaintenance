@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>New Machine</h2>
<hr/>

@using (Html.BeginForm())
{
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    @Html.TextBoxFor(model => model.Name, new { placeholder= "Name of Machine", @class = "form-control" })
    <input type="submit" value="Add Machine" class="btn btn-outline-primary" />
  }
<br />
<p class="new"><a href='/machines/'>Back <span class="material-symbols-outlined">arrow_back</span></a></p>
