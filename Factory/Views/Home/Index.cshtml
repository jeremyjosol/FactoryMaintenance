@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Factory</h1>
<hr/>
<h4>Engineers</h4>

@if(@Model.Count == 0)
{
  <p>No Engineers available.</p>
}
else
{
  <ul>
    @foreach(MachineEngineer added in Model)
    {
      <li>@Html.ActionLink($"{added.Engineer.Name}", "Details", "Engineers", new { id = added.EngineerId })</li>
    }
  </ul>
}

@if(@Model.Count == 0)
{
  <p>No Machines available.</p>
}
else
{
<h4>Machines</h4>
  <ul>
    @foreach(MachineEngineer added in Model)
    {
      <li>@Html.ActionLink($"{added.Machine.Name}", "Details", "Machines", new { id = added.MachineId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("View Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("View Machines", "Index", "Machines")</p>
<p>@Html.ActionLink("Add an Engineer", "Create", "Engineers")</p>
<p>@Html.ActionLink("Add a Machine", "Create", "Machines")</p>